<h1 style="text-align:center" class="title">Category List</h1>
<hr>
<div class="fix-support">
    <a href="/categories/add" class="fix-element"> <i class="fa fa-plus"></i><strong>Add</strong></a>
</div>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
    </tr>
    {{#each categories}}
    <tr>
        <td>{{{name}}}</td>
        <td>{{{description}}}</td>
        <td>
            <a href="/categories/view?id={{{_id}}}"><i class="fa fa-eye"></i></a>
            <a href="/categories/update?id={{{_id}}}"><i class="fa fa-pen"></i></a>
            <a onclick="return confirm('Are you sure')" href="/categories/delete?id={{{_id}}}"><i
                    class="fa fa-trash"></i></a>
        </td>
    </tr>
    {{/each }}

</table>
<hr>