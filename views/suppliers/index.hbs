<h1 style="text-align:center" class="title">Supplier List</h1>
<hr>
<div class="fix-support">
    <a href="/suppliers/add" class="fix-element"> <i class="fa fa-plus"></i>Add</a>
</div>
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th>Description</th>
        <th></th>
    </tr>
    {{#each suppliers}}
    <tr>
        <td>{{{name}}}</td>
        <td>{{{phone}}}</td>
        <td>{{{email}}}</td>
        <td>{{{address}}}</td>
        <td>{{{description}}}</td>
        <td>
            <a href="/suppliers/view?id={{{_id}}}"><i class="fa fa-eye"></i></a>
            <a href="/suppliers/update?id={{{_id}}}"><i class="fa fa-pen"></i></a>  
            <a onclick="return confirm('Confirm Delete?')" href="/suppliers/delete?id={{{_id}}}"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
    {{/each}}
</table>
<hr>